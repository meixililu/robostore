<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView 
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:fillViewport="true"
    	android:layout_weight="1"
        >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        <RelativeLayout 
			    android:id="@+id/home_ad_layout"
			    android:layout_width="match_parent"
			    android:layout_height="190dp"
			    >
			    <android.support.v4.view.ViewPager
	                android:id="@+id/viewpager" 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                />
			    <LinearLayout
			        android:id="@+id/viewpager_dot_layout"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_alignParentBottom="true"
			        android:paddingLeft="5dp"
			        android:layout_marginBottom="4dp"
			        android:gravity="right"
			        android:orientation="horizontal" />
			    <FrameLayout
		            android:id="@+id/back_btn_cover"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:padding="@dimen/padding_10"
				    android:layout_alignParentTop="true"
				    android:layout_alignParentLeft="true"
		            android:foreground="@drawable/framelayout_selector" >
				    <ImageView 
				        android:id="@+id/back_btn"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:src="@drawable/back"
				        />
			    </FrameLayout>
			</RelativeLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/padding_10"
	            android:gravity="bottom"
	            android:orientation="horizontal"
	            >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="￥"
	                android:textColor="@color/app_color"
	                android:textSize="@dimen/big"
	                />
	            <TextView 
	                android:id="@+id/good_price_new"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="3dp"
	                android:textSize="@dimen/bigx"
	                android:textColor="@color/app_color"
	                android:text="30.00"
	                />
	            <TextView 
	                android:id="@+id/good_price_old"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="@dimen/padding_5"
	                android:textSize="@dimen/bigger"
	                android:background="@color/text_grey"
	                android:textColor="@color/white"
	                android:text="￥35.00"
	                />
	            <TextView 
	                android:id="@+id/good_newprice_end"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="@dimen/padding_10"
	                android:textSize="@dimen/small"
	                android:textColor="@color/text_grey"
	                android:text="优惠价格还有3天结束"
	                />
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/padding_10"
	            android:layout_marginTop="@dimen/padding_5"
	            android:gravity="bottom"
	            android:orientation="horizontal"
	            >
	            <TextView 
	                android:id="@+id/good_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="@dimen/big"
	                android:textColor="@color/text_dark"
	                />
	            <TextView 
	                android:id="@+id/good_des"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="@dimen/padding_10"
	                android:textSize="@dimen/big"
	                android:textColor="@color/text_dark"
	                />
	        </LinearLayout>
	        <View 
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/text_black"
	            android:layout_marginTop="@dimen/padding_7"
	            />
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/padding_10"
	            android:layout_marginTop="@dimen/padding_10"
	            android:gravity="bottom"
	            android:orientation="horizontal"
	            >
	            <ImageView 
	                android:id="@+id/minus_img"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_margin="0dp"
	                android:src="@drawable/icon_minus"
	                />
	            <TextView 
	                android:id="@+id/number_txt"
	                android:layout_width="37dp"
	                android:layout_height="wrap_content"
	                android:background="@drawable/icon_number_bg"
	                android:textColor="@color/app_color"
	                android:textSize="@dimen/big"
	                android:layout_margin="0dp"
	                android:gravity="center"
	                android:text="1"
	                />
	            <ImageView 
	                android:id="@+id/plus_img"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_margin="0dp"
	                android:src="@drawable/icon_plus"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="@dimen/padding_10"
	                android:textSize="@dimen/small"
	                android:textColor="@color/text_grey"
	                android:text="商品规格 "
	                />
	            <TextView 
	                android:id="@+id/goods_spec"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="@dimen/padding_5"
	                android:textSize="@dimen/small"
	                android:textColor="@color/text_grey"
	                />
	        </LinearLayout>
	        
	        <TextView 
                android:id="@+id/good_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
	            android:layout_marginTop="@dimen/padding_15"
                android:textSize="@dimen/big"
                android:textColor="@color/text_dark"
                android:text="可口可乐在美国"
                />
	        
	        
        </LinearLayout>
    </ScrollView>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:id="@+id/add_to_cart_cover"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="@color/app_color"
            android:foreground="@drawable/framelayout_selector" >
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:src="@drawable/icon_tab_cart_d"
	            />
        </FrameLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tab_bg"
            android:gravity="right"
            android:orientation="horizontal"
            >
            <TextView 
                android:id="@+id/get_goods_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_10"
                android:textSize="@dimen/small"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="请在6月7日前取货"
                />
            <View 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_10"
                android:background="@color/white"
                />
            <FrameLayout
	            android:id="@+id/buy_now_cover"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:paddingRight="@dimen/padding_15"
	            android:paddingLeft="@dimen/padding_15"
	            android:foreground="@drawable/framelayout_selector" >
	            <TextView 
	                android:id="@+id/buy_now_btn"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:textSize="@dimen/bigest"
	                android:gravity="center"
	                android:textColor="@color/white"
	                android:text="购买  >"
	                />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>