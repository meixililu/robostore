<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_cover"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/padding_10"
    android:foreground="@drawable/framelayout_selector"
    >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView 
        android:id="@+id/good_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/goood_icon"
        />
    
    <RelativeLayout 
        android:id="@+id/good_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            >
            <TextView 
                android:id="@+id/good_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/bigger"
                android:textColor="@color/text_dark"
                android:text="新鲜薯条"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_7"
            android:layout_marginBottom="2dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal"
            >
            <TextView 
                android:id="@+id/good_price_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/bigest"
                android:textColor="@color/app_color"
                android:text="￥30.00"
                />
            <TextView 
                android:id="@+id/good_price_old"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:paddingTop="1dp"
                android:layout_marginLeft="@dimen/padding_5"
                android:textSize="@dimen/middle"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg_for_sale"
                android:text="￥135.00"
                />
        </LinearLayout>
        
    </RelativeLayout>
    <ImageButton 
        android:id="@+id/good_buy"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:scaleType="centerCrop"
        android:button="@null"
        android:layout_gravity="center_vertical"
        android:background="@drawable/btn_add_to_cart_selector"
        />

</LinearLayout>
</FrameLayout>