<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/padding_15"
    android:layout_marginRight="@dimen/padding_15"
    android:padding="@dimen/padding_15"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="将取货码发送给朋友"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/bigest"
        />
    <EditText 
            android:id="@+id/user_phone_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/padding_15"
            android:hint="手机号"
            android:textSize="@dimen/big"
            android:textColorHint="@color/text_grey1"
            android:singleLine="true"
			android:maxLength="20" 
			android:inputType="phone"
			android:imeOptions="actionNext"          
            android:textCursorDrawable="@null"
            android:textColor="@color/text_black"
            android:gravity="left|center_vertical"
			android:background="@drawable/bg_input"
            />
    <EditText 
            android:id="@+id/mesg_input"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:layout_marginTop="@dimen/padding_10"
            android:textColorHint="@color/text_grey1"
            android:padding="@dimen/padding_10"
            android:gravity="top|left"
			android:imeOptions="actionDone" 
            android:textCursorDrawable="@null"
            android:textSize="@dimen/big"
			android:background="@drawable/bg_input"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_15"
        android:gravity="center"
        android:orientation="horizontal"
        >
	    <Button 
	        android:id="@+id/send_btn_cancle"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="40dp"
	        android:background="@drawable/btn_login_selector"
	        android:textColor="@drawable/text_white_to_gray_selector"
	        android:layout_marginRight="@dimen/padding_10"
	        android:text="取消"
	        android:textSize="@dimen/big"
	        />
	    <Button 
	        android:id="@+id/send_btn_sure"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="40dp"
	        android:background="@drawable/btn_login_selector"
	        android:textColor="@drawable/text_white_to_gray_selector"
	        android:layout_marginLeft="@dimen/padding_10"
	        android:text="确定"
	        android:textSize="@dimen/big"
	        />
    </LinearLayout>
</LinearLayout>
